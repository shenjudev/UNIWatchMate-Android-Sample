<resources>
    <style name="AppSplashTheme" parent="Theme.AppCompat.Light">
        <item name="windowSplashScreenBackground">@color/colorPrimary</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.Sample.Button.Unelevated" parent="Widget.MaterialComponents.Button.UnelevatedButton"/>

    <style name="Widget.Sample.Button.Unelevated.Round">
        <item name="cornerRadius">96dp</item>
    </style>

    <style name="Widget.Sample.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton"/>

    <style name="Widget.Sample.Button.Outlined.Round">
        <item name="cornerRadius">96dp</item>
    </style>
    <style name="Widget.Sample.PreferenceView" parent="Widget.Sample.PreferenceBase">
    </style>
    <style name="Widget.Sample.PreferenceBase" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:minHeight">56dp</item>
    </style>
    <style name="Widget.Sample.PreferenceView.Item">
        <item name="preferenceTitleAppearance">?textAppearanceSubtitle1</item>
        <item name="preferenceTitleColor">?android:textColorPrimary</item>
        <item name="preferenceType">type_none</item>
        <item name="preferenceTitleDrawablePadding">8dp</item>
        <item name="showPreferenceSummary">false</item>
    </style>

    <style name="Widget.Sample.PreferenceView.Item.Text">
        <item name="preferenceType">type_text</item>
        <item name="preferenceTextAppearance">?textAppearanceBody2</item>
        <item name="preferenceTextColor">?android:textColorSecondary</item>
        <item name="preferenceIndicator">@mipmap/ic_section_arrow_next</item>
        <item name="showPreferenceIndicator">true</item>
    </style>

    <!--PreferenceItem:type_switch-->
    <style name="Widget.Sample.PreferenceView.Item.Switch">
        <item name="preferenceType">type_switch</item>
        <item name="showPreferenceIndicator">false</item>
    </style>

    <style name="Widget.Sample.PreferenceView.Item.Image">
        <item name="preferenceType">type_image</item>
        <item name="showPreferenceIndicator">false</item>
    </style>
    <!--PreferenceItem:type_text-->
    <style name="Widget.Item.Text" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Widget.Item.Switch" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PromptToastTheme" parent="BasePromptDialogTheme">
        <item name="prompt_gravity">bottom</item>
        <item name="prompt_margin_bottom">48dp</item>
        <item name="prompt_layout">@layout/prompt_toast_layout</item>
        <item name="prompt_background">@drawable/prompt_toast_background</item>
        <item name="prompt_text_color">@android:color/white</item>
        <item name="prompt_icon_normal_size">24dp</item>
        <item name="prompt_icon_tint_color">@android:color/white</item>
    </style>

    <style name="PromptProgressTheme" parent="BasePromptDialogTheme">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.32</item>
        <item name="prompt_layout">@layout/prompt_progress_layout</item>
        <item name="prompt_background">@drawable/prompt_progress_background</item>
        <item name="prompt_icon_tint_color">@color/colorPrimary</item>
        <item name="prompt_text_color">?android:textColorSecondary</item>
    </style>


    <!-- 定义对话框样式 -->
    <style name="CustomDialogWhite" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="CustomDialogTrans" parent="@style/CustomDialogWhite">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--控制dialog进出动画-->
    <style name="dialog_animation_top_enter" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_top_enter</item>
        <!-- 进入时的动画 -->
        <item name="android:windowExitAnimation">@anim/dialog_top_exit</item>
        <!-- 退出时的动画 -->
    </style>

    <style name="dialog_animation_bottom_enter" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_enter</item>
        <!-- 进入时的动画 -->
        <item name="android:windowExitAnimation">@anim/dialog_bottom_exit</item>
        <!-- 退出时的动画 -->
    </style>

    <style name="ActivityInOutAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/out_to_right</item>
    </style>

    <style name="dialog_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/shape_dialog_bg_normal</item>
    </style>

    <style name="dialog_tip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">@color/color_222222</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MwAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:windowAnimationStyle">@style/ActivityInOutAnim</item>-->
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:paddingEnd">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_4</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="kswAnimationDuration">300</item>
        <item name="kswBackColor">@color/primary_gray_3</item>
        <item name="kswBackDrawable">@drawable/back_drawable</item>
        <item name="kswThumbDrawable">@drawable/selector_thumb</item>
        <item name="kswThumbMarginBottom">-9dp</item>
        <item name="kswThumbMarginLeft">-6dp</item>
        <item name="kswThumbMarginRight">-6dp</item>
        <item name="kswThumbMarginTop">-1.5dp</item>
        <item name="kswThumbRangeRatio">1.4</item>
    </style>

    <style name="pray_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="min_height">@dimen/dp_48</item>
        <item name="title_size">@dimen/text_size_sub_title</item>
        <item name="title_color">@color/black</item>
        <item name="data_size">@dimen/text_size_sub_title</item>
        <item name="data_color">@color/black</item>
        <item name="unit_size">@dimen/text_size_sub_title</item>
        <item name="unit_color">@color/black</item>
        <item name="show_bottom_divider">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!--dialog从底部滑入滑出的动画-->
    <style name="Dialog_Anim_Bottom" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <!--中间缩放-->
    <style name="Dialog_Anim_Center_Zoom" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowEnterAnimation">@anim/zoom_in_center</item>
        <item name="android:windowExitAnimation">@anim/zoom_out_center</item>
    </style>

    <!-- dialog 淡入淡出动画 -->
    <style name="Dialog_Anim_Fade" parent="@android:style/Theme.Dialog">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="btn_style_1">
        <item name="bl_corners_radius">@dimen/dp_16</item>
        <item name="bl_enabled_gradient_angle">0</item>
        <item name="bl_enabled_gradient_endColor">@color/colorPrimary</item>
        <item name="bl_enabled_gradient_startColor">@color/colorPrimary</item>
        <item name="bl_ripple_color">@color/colorPrimaryDark</item>
        <item name="bl_ripple_enable">true</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="bl_enabled_gradient_type">linear</item>
        <item name="android:textColor">@color/white</item>
        <item name="bl_solid_color">@color/colorPrimaryLight</item>
        <item name="bl_unEnabled_gradient_endColor">@color/colorPrimaryLight</item>
        <item name="bl_unEnabled_gradient_startColor">@color/colorPrimaryLight</item>
    </style>

    <style name="btn_style_1_1">
        <item name="bl_corners_radius">@dimen/dp_25</item>
        <item name="bl_enabled_gradient_angle">0</item>
        <item name="bl_enabled_gradient_endColor">@color/colorPrimary</item>
        <item name="bl_enabled_gradient_startColor">@color/colorPrimary</item>
        <item name="bl_ripple_color">@color/colorPrimaryDark</item>
        <item name="bl_ripple_enable">true</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="bl_enabled_gradient_type">linear</item>
        <item name="android:textColor">@color/white</item>
        <item name="bl_solid_color">@color/colorPrimaryLight</item>
        <item name="bl_unEnabled_gradient_endColor">@color/colorPrimaryLight</item>
        <item name="bl_unEnabled_gradient_startColor">@color/colorPrimaryLight</item>
    </style>

    <style name="btn_style_2">
        <item name="bl_corners_radius">@dimen/dp_25</item>
        <item name="bl_enabled_gradient_angle">0</item>
        <item name="bl_enabled_gradient_endColor">@color/colorPrimary</item>
        <item name="bl_enabled_gradient_startColor">@color/colorPrimary</item>
        <item name="bl_ripple_color">@color/colorPrimary</item>
        <item name="bl_ripple_enable">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="bl_enabled_gradient_type">linear</item>
        <item name="bl_solid_color">@color/black</item>
        <item name="bl_unEnabled_gradient_endColor">@color/colorPrimary</item>
        <item name="bl_unEnabled_gradient_startColor">@color/colorPrimary</item>
    </style>

    <style name="btn_style_3">
        <item name="bl_corners_radius">@dimen/dp_25</item>
        <item name="bl_enabled_gradient_angle">0</item>
        <item name="bl_enabled_gradient_endColor">@color/black</item>
        <item name="bl_enabled_gradient_startColor">@color/black</item>
        <item name="bl_ripple_color">@color/colorPrimary</item>
        <item name="bl_ripple_enable">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="bl_enabled_gradient_type">linear</item>
        <item name="bl_solid_color">@color/black</item>
        <item name="bl_unEnabled_gradient_endColor">@color/black</item>
        <item name="bl_unEnabled_gradient_startColor">@color/black</item>
    </style>


    <style name="btn_style_4">
        <item name="bl_corners_radius">@dimen/dp_16</item>
        <item name="bl_enabled_gradient_angle">0</item>
        <item name="bl_enabled_gradient_endColor">@color/white</item>
        <item name="bl_enabled_gradient_startColor">@color/white</item>
        <item name="bl_ripple_color">@color/color_E5E5EA</item>
        <item name="bl_ripple_enable">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="bl_enabled_gradient_type">linear</item>
        <item name="bl_stroke_color">@color/color_8c8c8c</item>
        <item name="bl_stroke_width">@dimen/dp_1</item>
        <item name="bl_unEnabled_gradient_endColor">@color/white</item>
        <item name="bl_unEnabled_gradient_startColor">@color/white</item>
    </style>

    <style name="btn_style_5">
        <item name="bl_corners_radius">@dimen/dp_16</item>
        <item name="bl_enabled_gradient_angle">0</item>
        <item name="bl_enabled_gradient_endColor">@color/primary_danger</item>
        <item name="bl_enabled_gradient_startColor">@color/primary_danger</item>
        <item name="bl_ripple_color">@color/primary_danger_dark</item>
        <item name="bl_ripple_enable">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="bl_enabled_gradient_type">linear</item>
        <item name="bl_stroke_width">@dimen/dp_1</item>
        <item name="bl_unEnabled_gradient_endColor">@color/primary_danger_light</item>
        <item name="bl_unEnabled_gradient_startColor">@color/primary_danger_light</item>
    </style>

    <!--WheelView Style-->
    <style name="wheel_view_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="wheelview_dividerColor">@color/transparent</item>
        <item name="wheelview_lineSpacingMultiplier">2.8</item>
        <item name="wheelview_textColorCenter">@color/black</item>
        <item name="wheelview_textColorOut">@color/primary_gray_3</item>
        <item name="wheelview_textSize">@dimen/text_size_wheel_view</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
</resources>
