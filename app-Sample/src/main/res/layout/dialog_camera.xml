<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/dialog_container">

    <ImageView
        android:id="@+id/iv_camera_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:src="@mipmap/biu_icon_no_camera_permission" />

    <TextView
        android:id="@+id/tv_tip"
        style="@style/dialog_tip"
        android:layout_marginVertical="@dimen/dp_20"
        android:text="@string/camera_permission_reject" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/color_f2f2f7"
            android:textSize="@dimen/text_size_16"
            android:layout_marginHorizontal="@dimen/dp_5"
            app:bl_corners_radius="@dimen/dp_15"
            app:bl_solid_color="@color/color_46567B"
            app:bl_stroke_color="@color/color_f2f2f7"
            app:bl_stroke_width="1dp" />

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_marginHorizontal="@dimen/dp_5"
            android:layout_weight="1"
            android:gravity="center"
            android:text="开启权限"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"

            app:bl_corners_radius="@dimen/dp_15"
            app:bl_enabled_gradient_angle="0"
            app:bl_enabled_gradient_endColor="@color/color_white"
            app:bl_enabled_gradient_startColor="@color/color_white"
            app:bl_enabled_gradient_type="linear"

            app:bl_solid_color="@color/color_4dfff"
            app:bl_unEnabled_gradient_endColor="@color/color_4dfff"
            app:bl_unEnabled_gradient_startColor="@color/color_4dfff" />

    </LinearLayout>
</LinearLayout>
