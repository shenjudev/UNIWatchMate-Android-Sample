<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.device.dial.diyDial.DiyDialFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_200"
        android:layout_marginTop="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_diy_dial"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/fl_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black" />
        <TextView
            android:id="@+id/tv_select_photo"
            android:text="@string/select_photo"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_diy_dial_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </androidx.cardview.widget.CardView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_time_show_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:layout_marginTop="@dimen/dp_5"
        android:clipToPadding="false"
        android:paddingHorizontal="@dimen/dp_4"
        app:layout_constraintTop_toBottomOf="@id/card_view" />


    <com.sjbt.sdk.sample.ui.device.dial.diyDial.ColorPickerView
        android:id="@+id/color_picker_view"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_160"
        android:layout_marginTop="@dimen/dp_5"
        app:center_color="#ffffff"
        app:center_radius="@dimen/dp_8"
        app:circle_radius="@dimen/dp_120"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycle_time_show_type" />

    <Button
        android:id="@+id/bt_install_dial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="@string/ds_install"
        app:layout_constraintBottom_toBottomOf="parent" />


    <com.sjbt.sdk.sample.widget.LoadingView
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:elevation="@dimen/dp_1"
        android:visibility="gone"
        android:background="@color/color_16000000"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</androidx.constraintlayout.widget.ConstraintLayout>