<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/cst_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.sjbt.sdk.sample.widget.HoleBackgroundLayout
        android:id="@+id/hole_background"
        android:layout_width="match_parent"
        android:background="@color/color_99000000"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/crop_image_cover_view_hole"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_200"
            android:layout_gravity="center" />

    </com.sjbt.sdk.sample.widget.HoleBackgroundLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cst_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_black"
        android:paddingTop="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/ll_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/line_middle_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:layout_alignParentStart="true"
                android:background="@color/color_black" />

            <FrameLayout
                android:id="@+id/layout_bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:visibility="visible">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/id_rv_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/positionIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_14"
                    android:src="@drawable/lf_ugc_publish_pos" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/left_view"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:background="#cc000000" />

                    <View
                        android:id="@+id/right_view"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="-1px"
                        android:background="#cc000000" />

                    <LinearLayout
                        android:id="@+id/id_seekBarLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:orientation="vertical" />
                </RelativeLayout>
            </FrameLayout>

            <View
                android:id="@+id/line_middle_bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:layout_alignParentStart="true"
                android:background="@color/color_black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_video_action"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_middle">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_16" />


            <TextView
                android:id="@+id/tv_finish"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/finish"
                android:textColor="@color/teal_200"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>