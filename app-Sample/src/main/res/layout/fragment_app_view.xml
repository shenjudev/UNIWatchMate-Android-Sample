<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?dividerVertical"
        android:orientation="vertical"
        android:showDividers="middle|end">

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_app_view_gridding"
            style="@style/Widget.Sample.PreferenceView.Item.Image"
            app:preferenceImageTint="?colorPrimary"
            app:preferenceTitle="@string/app_view_gridding"/>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_app_view_list"
            style="@style/Widget.Sample.PreferenceView.Item.Image"
            app:preferenceImageTint="?colorPrimary"
            app:preferenceTitle="@string/app_view_list"/>


    </LinearLayout>
</ScrollView>

